generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Actor {
  id             String     @id @default(uuid(7))
  user           User?      @relation(fields: [userId], references: [id])
  uri            String     @unique
  username       String
  handle         String     @unique
  name           String?
  inboxUrl       String     @unique
  sharedInboxUrl String?
  url            String?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @default(now()) @updatedAt
  userId         String?    @unique
  summary        String?
  keys           Keys[]
  following      Follows[]  @relation("Following")
  follower       Follows[]  @relation("Follower")
  mainActor      MainActor?
  posts          Posts[]
  comments       Comment[]
  avatar         Image?     @relation("Avatar", fields: [avatarId], references: [id])
  avatarId       String?    @unique
  banner         Image?     @relation("Banner", fields: [bannerId], references: [id])
  bannerId       String?    @unique

  @@map("actor")
}

model Keys {
  type       String
  privateKey String
  publicKey  String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt
  Actor      Actor    @relation(fields: [actorId], references: [id], onDelete: Cascade)
  actorId    String

  @@id([actorId, type])
  @@map("keys")
}

model Follows {
  followingId String
  following   Actor    @relation("Following", fields: [followingId], references: [id])
  followerId  String
  follower    Actor    @relation("Follower", fields: [followerId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  @@id([followingId, followerId])
  @@map("follows")
}

model Posts {
  id          String    @id @default(uuid(7))
  uri         String    @unique
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  actor       Actor     @relation(fields: [actorId], references: [id], onDelete: Cascade)
  actorId     String
  title       String
  content     String
  state       String    @default("published")
  url         String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now()) @updatedAt
  publishedAt DateTime?
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
  slug        String?   @unique
  banner      Image?    @relation("PostBanner", fields: [bannerId], references: [id])
  bannerId    String?   @unique
  comments    Comment[]

  @@map("posts")
}

model Category {
  id    String  @id @default(uuid(7))
  name  String  @unique
  posts Posts[]

  @@map("categories")
}

model MainActor {
  id        Int      @id @default(autoincrement())
  actorId   String   @unique
  actor     Actor    @relation(fields: [actorId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("main_actor")
}

model Image {
  id          String   @id @default(uuid(7))
  url         String
  originalUrl String
  avatarActor Actor?   @relation("Avatar")
  bannerActor Actor?   @relation("Banner")
  user        User?    @relation("UserAvatar")
  post        Posts?   @relation("PostBanner")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  @@map("image")
}

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean   @default(false)
  avatar        Image?    @relation("UserAvatar", fields: [avatarId], references: [id])
  avatarId      String?   @unique
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  sessions      Session[]
  accounts      Account[]

  username        String
  displayUsername String
  actor           Actor?
  posts           Posts[]

  role       String?
  banned     Boolean?  @default(false)
  banReason  String?
  banExpires DateTime?

  @@unique([email])
  @@unique([username])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  impersonatedBy String?

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

model Comment {
  id         String       @id @default(uuid(7))
  uri        String       @unique
  actorId    String
  actor      Actor        @relation(fields: [actorId], references: [id], onDelete: Cascade)
  postId     String
  post       Posts        @relation(fields: [postId], references: [id], onDelete: Cascade)
  parentId   String?
  parent     Comment?     @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies    Comment[]    @relation("CommentReplies")
  content    String
  url        String?
  to         String[]     @default([])
  cc         String[]     @default([])
  mentions   Json[]       @default([])
  attachment Attachment[]
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @default(now()) @updatedAt

  @@map("comments")
}

model Attachment {
  id        String   @id @default(uuid(7))
  commentId String
  comment   Comment  @relation(fields: [commentId], references: [id], onDelete: Cascade)
  url       String
  mediaType String?
  name      String?
  sensitive Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("attachment")
}
